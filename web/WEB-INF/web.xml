<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <description></description>
        <display-name>echo.LoginServlet</display-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>echo.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <description></description>
        <display-name>diagram.DiagramServlet</display-name>
        <servlet-name>DiagramServlet</servlet-name>
        <servlet-class>diagram.DiagramServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DiagramServlet</servlet-name>
        <url-pattern>/DiagramServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <description></description>
        <display-name>robot.RegisterRobotServlet</display-name>
        <servlet-name>RegisterRobotServlet</servlet-name>
        <servlet-class>robot.RegisterRobotServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterRobotServlet</servlet-name>
        <url-pattern>/RegisterRobotServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <description></description>
        <display-name>robot.robotWrapperServlet</display-name>
        <servlet-name>robotWrapperServlet</servlet-name>
        <servlet-class>robot.robotWrapperServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>robotWrapperServlet</servlet-name>
        <url-pattern>/RobotWrapperServlet</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>This is a MySQL database connection</description>
        <res-ref-name>jdbc/ntest</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
